{{ 'section-hero-block.css' | asset_url | stylesheet_tag }}

<div class="hero-block hero-block--{{ section.settings.size }}">
  {%- if section.settings.background_image -%}
    <div class="hero-block__background">
      <img 
        src="{{ section.settings.background_image | image_url: width: 1200 }}" 
        alt="{{ section.settings.heading | escape }}"
        loading="lazy"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
      >
    </div>
  {%- endif -%}
  
  <div class="hero-block__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="hero-block__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="hero-block__text">{{ section.settings.text }}</div>
    {%- endif -%}
    
    {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
      <a href="{{ section.settings.button_url }}" class="hero-block__button">
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero Block",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "size",
      "label": "Size",
      "options": [
        {
          "value": "small",
          "label": "Small (1 column)"
        },
        {
          "value": "medium",
          "label": "Medium (2 columns)"
        },
        {
          "value": "large",
          "label": "Large (3 columns)"
        }
      ],
      "default": "medium"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hero Block"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Block"
    }
  ]
}
{% endschema %}
