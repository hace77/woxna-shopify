{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    #shopify-section-{{ section.id }} .page-width {
      padding: 0 !important;
      max-width: 100% !important;
      margin: 0 !important;
    }
  }

  /* Mobile full width styles */
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .page-width {
      padding: 0 !important;
      max-width: 100% !important;
      margin: 0 !important;
    }
    
    .collage {
      padding-left: 0;
      padding-right: 0;
    }
  }
  
  @media screen and (min-width: 750px) {
    .mobile-only-image {
      display: none;
    }
    
    .desktop-only-image {
      display: block;
    }
  }

  /* customaising the clickable image*/
  .clickable_image_link img{
    object-fit: cover;
    width: 100%;
    height: 100%
  }

  /* Text overlay styles */
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    padding: 2rem;
    z-index: 1;
  }

  /* Mobile text positioning */
  @media screen and (max-width: 749px) {
    .image-overlay--mobile-top-left {
      justify-content: flex-start !important;
      align-items: flex-start !important;
    }

    .image-overlay--mobile-top-center {
      justify-content: flex-start !important;
      align-items: center !important;
    }

    .image-overlay--mobile-top-right {
      justify-content: flex-start !important;
      align-items: flex-end !important;
    }

    .image-overlay--mobile-center-left {
      justify-content: center !important;
      align-items: flex-start !important;
    }

    .image-overlay--mobile-center {
      justify-content: center !important;
      align-items: center !important;
    }

    .image-overlay--mobile-center-right {
      justify-content: center !important;
      align-items: flex-end !important;
    }

    .image-overlay--mobile-bottom-left {
      justify-content: flex-end !important;
      align-items: flex-start !important;
    }

    .image-overlay--mobile-bottom-center {
      justify-content: flex-end !important;
      align-items: center !important;
    }

    .image-overlay--mobile-bottom-right {
      justify-content: flex-end !important;
      align-items: flex-end !important;
    }

    /* Mobile text alignment */
    .image-overlay--mobile-text-left {
      text-align: left !important;
    }

    .image-overlay--mobile-text-center {
      text-align: center !important;
    }

    .image-overlay--mobile-text-right {
      text-align: right !important;
    }

    /* Mobile heading sizes */
    .image-overlay__heading--mobile-h2 {
      font-size: 2rem !important;
      line-height: 1.3 !important;
    }

    .image-overlay__heading--mobile-h1 {
      font-size: 2.8rem !important;
      line-height: 1.2 !important;
    }

    .image-overlay__heading--mobile-h0 {
      font-size: 3.5rem !important;
      line-height: 1.1 !important;
    }

    .image-overlay__heading--mobile-hxl {
      font-size: 4.2rem !important;
      line-height: 1.1 !important;
    }

    .image-overlay__heading--mobile-hxxl {
      font-size: 5rem !important;
      line-height: 1.1 !important;
    }
  }

  /* Position classes */
  .image-overlay--top-left {
    justify-content: flex-start;
    align-items: flex-start;
  }

  .image-overlay--top-center {
    justify-content: flex-start;
    align-items: center;
  }

  .image-overlay--top-right {
    justify-content: flex-start;
    align-items: flex-end;
  }

  .image-overlay--center-left {
    justify-content: center;
    align-items: flex-start;
  }

  .image-overlay--center {
    justify-content: center;
    align-items: center;
  }

  .image-overlay--center-right {
    justify-content: center;
    align-items: flex-end;
  }

  .image-overlay--bottom-left {
    justify-content: flex-end;
    align-items: flex-start;
  }

  .image-overlay--bottom-center {
    justify-content: flex-end;
    align-items: center;
  }

  .image-overlay--bottom-right {
    justify-content: flex-end;
    align-items: flex-end;
  }

  /* Text alignment classes */
  .image-overlay--text-left {
    text-align: left;
  }

  .image-overlay--text-center {
    text-align: center;
  }

  .image-overlay--text-right {
    text-align: right;
  }

  .image-overlay__text {
    color: #ffffff;
    margin: 0;
  }

  .image-overlay__heading {
    margin-bottom: 1rem;
  }

  .image-overlay__heading--large {
    font-size: 4.5rem;
    line-height: 1.1;
  }

  .image-overlay__heading--medium {
    font-size: 3.5rem;
    line-height: 1.2;
  }

  .image-overlay__heading--small {
    font-size: 2.5rem;
    line-height: 1.3;
  }

  .image-overlay__description {
    font-size: 1.2rem;
  }

  /* Text style options */
  .image-overlay__description.body {
    font-size: 1.6rem;
    line-height: calc(1 + 0.5 / var(--font-body-scale));
  }

  .image-overlay__description.subtitle {
    font-size: 1.8rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
    letter-spacing: 0.06rem;
    color: rgba(var(--color-foreground), 0.7);
  }

  .image-overlay__description.caption-with-letter-spacing {
    font-size: 1rem;
    letter-spacing: 0.13rem;
    line-height: calc(1 + 0.2 / var(--font-body-scale));
    text-transform: uppercase;
  }

  .collage-card {
    position: relative;
  }
  
  .collage {
    padding-top: {{ settings.spacing_grid_horizontal | round: 0 }}px;
    padding-bottom: {{ settings.spacing_grid_horizontal | round: 0 }}px;
  }
