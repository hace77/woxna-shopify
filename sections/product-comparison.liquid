{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .product-comparison {
    background-color: rgba(var(--color-foreground), 0.08);
  }

  .product-comparison__item {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-comparison__card {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: rgb(var(--color-background));
    border-radius: 0.8rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .product-comparison__image-wrapper {
    width: 100%;
    margin: 0;
    margin-bottom: 1.5rem;
  }

  .product-comparison__image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 0;
    display: block;
  }

  .product-comparison__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 0 1.5rem 1.5rem;
  }

  .product-comparison__text {
    flex: 1;
  }

  {%- if section.settings.mobile_side_by_side -%}
  @media screen and (max-width: 749px) {
    .product-comparison__grid--mobile-side-by-side {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      margin-left: -1.5rem;
      margin-right: -1.5rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .product-comparison__grid--mobile-side-by-side .product-comparison__item {
      flex: 0 0 calc(85% - var(--grid-mobile-horizontal-spacing) / 2);
      max-width: calc(85% - var(--grid-mobile-horizontal-spacing) / 2);
      min-width: calc(85% - var(--grid-mobile-horizontal-spacing) / 2);
      scroll-snap-align: start;
    }

    .product-comparison__grid--mobile-side-by-side .product-comparison__item:last-child {
      margin-right: 1.5rem;
    }
  }
  {%- endif -%}
{%- endstyle -%}

{%- liquid
  assign columns_desktop = section.settings.columns_desktop | plus: 0
  assign columns_mobile = section.settings.columns_mobile | plus: 0
-%}

<div class="product-comparison color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <div class="product-comparison__grid grid grid--{{ columns_mobile }}-col-tablet-down grid--{{ columns_desktop }}-col-desktop{% if section.settings.mobile_side_by_side %} product-comparison__grid--mobile-side-by-side{% endif %}">
      {%- for block in section.blocks -%}
        <div
          class="product-comparison__item grid__item{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="product-comparison__card content-container">
            {%- if block.settings.image != blank -%}
              <div class="product-comparison__image-wrapper">
                {%- liquid
                  assign number_of_columns = columns_desktop
                  assign number_of_columns_mobile = columns_mobile
                  assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                  assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                  assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                -%}
                {% capture sizes %}
                  (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) / {{ number_of_columns }}),
                  (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) / {{ number_of_columns }}),
                  (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) / {{ number_of_columns_mobile }}),
                  calc((100vw - {{ grid_space_mobile }}) / {{ number_of_columns_mobile }})
                {% endcapture %}
                {{
                  block.settings.image
                  | image_url: width: 3200
                  | image_tag:
                    widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                    sizes: sizes,
                    class: 'product-comparison__image',
                    loading: 'lazy'
                }}
              </div>
            {%- endif -%}

            <div class="product-comparison__content">
              {%- if block.settings.text != blank -%}
                <div class="product-comparison__text rte">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Comparison",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Compare Products",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "Extra Extra Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "options": [
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        }
      ],
      "default": "2",
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left",
      "label": "Column alignment"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1",
      "label": "Number of columns on mobile"
    },
    {
      "type": "checkbox",
      "id": "mobile_side_by_side",
      "default": false,
      "label": "Display columns side-by-side on mobile",
      "info": "When enabled, comparison columns will display side-by-side on mobile devices with horizontal scrolling"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "comparison_item",
      "name": "Comparison Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add comparison text here. Describe the product features, benefits, or specifications.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Comparison",
      "blocks": [
        {
          "type": "comparison_item"
        },
        {
          "type": "comparison_item"
        }
      ]
    }
  ]
}
{% endschema %}
